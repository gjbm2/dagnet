{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Application Settings",
  "description": "Configuration settings for the DagNet Graph Editor",
  "type": "object",
  "properties": {
    "ui": {
      "type": "object",
      "title": "User Interface Settings",
      "description": "UI preferences and display options",
      "properties": {
        "theme": {
          "type": "string",
          "title": "Theme",
          "description": "Application theme",
          "enum": ["light", "dark", "auto"],
          "enumNames": ["Light", "Dark", "Auto"],
          "default": "auto"
        },
        "defaultViewMode": {
          "type": "string",
          "title": "Default View Mode",
          "description": "Default view mode for new tabs",
          "enum": ["interactive", "raw-json", "raw-yaml"],
          "enumNames": ["Interactive", "Raw JSON", "Raw YAML"],
          "default": "interactive"
        },
        "autoSave": {
          "type": "boolean",
          "title": "Auto Save",
          "description": "Automatically save changes",
          "default": true
        },
        "showLineNumbers": {
          "type": "boolean",
          "title": "Show Line Numbers",
          "description": "Show line numbers in raw view",
          "default": true
        },
        "fontSize": {
          "type": "number",
          "title": "Font Size",
          "description": "Editor font size in pixels",
          "minimum": 10,
          "maximum": 24,
          "default": 14
        }
      }
    },
    "development": {
      "type": "object",
      "title": "Development Settings",
      "description": "Settings for development and debugging",
      "properties": {
        "devMode": {
          "type": "boolean",
          "title": "Development Mode",
          "description": "Enable development features and debugging",
          "default": true
        },
        "debugGitOperations": {
          "type": "boolean", 
          "title": "Debug Git Operations",
          "description": "Enable detailed logging for Git operations",
          "default": false
        }
      }
    }
  },
  "required": ["ui", "development"]
}